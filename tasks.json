{
  "version": "2.0.0",
  "tasks": [
    {
      // =====================================================
      // Build Godot C# Project (compile DLLs only, no editor)
      // =====================================================
      "label": "Godot: Build C#",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/ProjectName.csproj",
        "--configuration",
        "Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
